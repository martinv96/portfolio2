{% extends 'layout.html.twig' %}

{% block title %}Page d'accueil{% endblock %}

{% block body %}
    <link rel="stylesheet" href="{{ asset('styles/ajoutpost.css') }}">

    <h1>Bienvenue sur votre page de posts</h1>


    <p class="text">Ajouter un post</p>

    {{form_start(postForm)}}

    <div class="formcollection">

        <div class="label">
            {{ form_label(postForm.titre, 'Titre') }}
        </div>
        <div class="widget">
            {{ form_widget(postForm.titre) }}
        </div>

        <div class="label">
            {{ form_label(postForm.description, 'Description') }}
        </div>
        <div class="widget">
            {{ form_widget(postForm.description) }}
        </div>

        <div class="label">
            {{ form_label(postForm.isPublic, 'Visibilit√©') }}
        </div>
        <div class="widget">
            {{ form_widget(postForm.isPublic) }}
        </div>

        <div class="label">
            {{ form_label(postForm.image, 'Fichier') }}
        </div>
        <div class="widget">
            {{ form_widget(postForm.image) }}
        </div>

        <div>
            {{ form_widget(postForm.envoyer, {'attr': {'class': 'bouton'}}) }}
        </div>

    </div>

{{ form_end(postForm) }}
  
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

{% endblock %}
